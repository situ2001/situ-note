---
import BaseLayout from "../layouts/BaseLayout.astro";

import {
  HeroSection,
  Roles,
  Projects,
  Blog,
  Categories,
} from "../components/home";

import { BLOG_TITLE, BLOG_DESCRIPTION } from "../config";
---

<BaseLayout title={BLOG_TITLE} description={BLOG_DESCRIPTION}>
  <div class="flex flex-col gap-4">
    <section class="flex flex-col md:flex-row justify-between py-8 md:py-4">
      <div class="md:p-2">
        <HeroSection client:load />
      </div>
      <div class="pt-8 md:pt-0 md:w-1/3 md:min-w-96">
        <Roles client:load />
      </div>
    </section>

    <section>
      <Projects client:load />
    </section>

    <section>
      {/* Blog & Categories Section */}
      <section class="flex flex-col md:flex-row gap-4 py-4 md:py-8">
        <div class="w-full md:w-1/2 border p-4 rounded-lg">
          <Blog />
        </div>
        <div class="w-full md:w-1/2 border p-4 rounded-lg">
          <Categories />
        </div>
      </section>
    </section>
  </div>
</BaseLayout>
