---
import BaseLayout from "../layouts/BaseLayout.astro";

import Card, { FadeFromDirection } from "../components/Card";
import { LatestBlog } from "../components/LatestBlog";
import { SelfIntro } from "../components/SelfIntro";

import { Picture } from "astro:assets";
import Avatar from "../assets/28241963.png";
import { Category } from "../components/Categories";
---

<style>
  .grid-block {
    grid-template-rows: auto;
    grid-template-columns: repeat(3, 1fr);
    gap: 12px;
  }

  .item-self-intro {
    grid-column: 1 / -1;
  }

  .item-latest-blog {
    grid-column: 1 / 3;
  }

  .item-category {
    grid-column: 3 / 4;
  }
</style>

<BaseLayout title="Situ Note" description="Home Page" topNavigationAnimation>
  <div class="hidden md:grid grid-block">
    <div class="item-self-intro">
      <Card fadeFromDirection={FadeFromDirection.Top} fullHeight>
        <SelfIntro client:load>
          <Picture
            src={Avatar}
            alt={"situ2001's GitHub avatar"}
            class="h-16 w-16 rounded-full transition-all duration-300 hover:rotate-180"
            width="100"
            height="100"
          />
        </SelfIntro>
      </Card>
    </div>
    <div class="item-latest-blog">
      <Card fadeFromDirection={FadeFromDirection.Left} fullHeight>
        <LatestBlog client:load />
      </Card>
    </div>
    <div class="item-category">
      <Card fadeFromDirection={FadeFromDirection.Right} fullHeight>
        <Category />
      </Card>
    </div>
  </div>

  <!-- Mobile Device -->
  <div class="md:hidden">
    <Card fadeFromDirection={FadeFromDirection.Bottom}>
      <SelfIntro client:load>
        <Picture
          src={Avatar}
          alt={"situ2001's GitHub avatar"}
          class="h-16 w-16 rounded-full transition-all duration-300 hover:rotate-180"
          width="100"
          height="100"
        />
      </SelfIntro>
    </Card>
    <Card fadeFromDirection={FadeFromDirection.Bottom}>
      <LatestBlog client:load />
    </Card>
    <Card fadeFromDirection={FadeFromDirection.Bottom}>
      <Category />
    </Card>
  </div>
</BaseLayout>
