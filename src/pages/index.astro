---
import BaseLayout from "../layouts/BaseLayout.astro";

import { AboutMe, Roles, Blog, Categories } from "../components/home";

import { BLOG_TITLE, BLOG_DESCRIPTION } from "../config";
---

<BaseLayout title={BLOG_TITLE} description={BLOG_DESCRIPTION}>
  <div class="flex flex-col gap-4">
    <!-- Hero Section -->
    <section class="flex flex-col md:flex-row justify-between py-8 md:py-4">
      <div class="md:p-2">
        <AboutMe client:load />
      </div>
      <div class="pt-8 md:pt-0 md:w-1/3 md:min-w-96">
        <Roles client:load />
      </div>
    </section>

    <section>
      <!-- <p>TODO Project Section</p> -->
    </section>

    <section>
      {/* Blog & Categories Section */}
      <section class="flex flex-col md:flex-row gap-4 md:py-8">
        <div class="w-full md:w-1/2 md:border md:p-4 md:rounded-lg">
          <Blog />
        </div>
        <div class="w-full md:w-1/2 md:border md:p-4 md:rounded-lg">
          <Categories />
        </div>
      </section>
    </section>
  </div>
</BaseLayout>
