---
import {
  getPostSortedByDate,
  getPostsGroupByCategory,
  posts as postsData,
} from "../../../api/blog";

import BaseLayout from "../../../layouts/BaseLayout.astro";

const postsGrouppedByCategory = getPostsGroupByCategory(
  getPostSortedByDate(postsData)
);
---

<BaseLayout title="Category" description="The category page">
  <div>
    <ul>
      {
        Object.keys(postsGrouppedByCategory).map((category) => {
          return (
            <span class="mr-4 inline-block">
              <a
                class="underline underline-offset-4"
                href={`/blog/category/${category}`}
              >
                {category}
              </a>
            </span>
          );
        })
      }
    </ul>
  </div>
</BaseLayout>
