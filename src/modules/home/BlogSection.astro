---
import { getPostSortedByDate, posts as postsData } from "../../api/blog";
import { BlogListItem } from "@/components/BlogListItem";

const posts = getPostSortedByDate(postsData);
const recentFivePosts = posts.slice(0, 5);
---

<h2 class="heading-with-underline mb-4 mt-4">Recent Blogs</h2>
<ul>
  {
    recentFivePosts.map((post) => {
      return <BlogListItem post={post} />;
    })
  }
</ul>
<div class="mt-2.5">
  <a
    href="/blog"
    class="inline-block group relative"
  >
    More â†’
    <span
      class="absolute bottom-0 left-0 w-0 h-px bg-current transition-all duration-300 ease-in-out group-hover:w-full"
    />
  </a>
</div>
