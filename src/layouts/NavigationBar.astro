---
import "../styles/header.css";
import SiteLogo from "../components/SiteLogo";

type Props = {};

const {} = Astro.props;
---

<script>
  import thorttle from "lodash/throttle";
  import { isTwoElementsIntersecting } from "../utils/intersection";

  const onScroll = () => {
    const header = document.querySelector("header");
    const main = document.querySelector("main");
    if (!header || !main) return;

    const isIntersecting = isTwoElementsIntersecting(header, main);

    if (!isIntersecting) {
      header.classList.add("bg-white");
      header.classList.remove("bg-slate-200");
    } else {
      header.classList.remove("bg-white");
      header.classList.add("bg-slate-200");
    }
  };

  window.addEventListener("scroll", thorttle(onScroll, 100));
  onScroll();
</script>

<header
  class="p-4 lg:mt-10 lg:mb-4 top-0 sticky transition-colors duration-300 z-10"
>
  <nav class="text-xl mx-auto max-w-screen-lg">
    <h2 class="left">
      <a href="/" class="font-serif">
        <SiteLogo client:load />
      </a>
    </h2>

    <div class="right flex items-center">
      <h2>
        <a rel="prefetch" href="/blog">Blog</a>
      </h2>
      <h2 class="ml-4">
        <a href="/friends">Friends</a>
      </h2>
      <h2 class="ml-4">
        <a href="/rss.xml">RSS</a>
      </h2>
    </div>
  </nav>
</header>
