---
import BaseHtmlHead from "../components/BaseHtmlHead.astro";
import TopNavigation from "../components/TopNavigation.astro";

interface Props {
  title: string;
  description: string;
  fullWidth?: boolean;
  topNavigationAnimation?: boolean;
}
const { title, description, fullWidth, topNavigationAnimation } = Astro.props;
---

<html lang="zh">
  <head>
    <BaseHtmlHead title={title} description={description} />
  </head>
  <body class="dark:bg-gray-800 dark:text-gray-300">
    <TopNavigation showAnimation={topNavigationAnimation} />
    <main class="p-4 mx-auto max-w-6xl">
      <slot />
    </main>
  </body>
</html>
