---
import BaseHtmlHead from "./BaseHtmlHead.astro";
import TopNavigation from "./NavigationBar.astro";

interface Props {
  title: string;
  description: string;
  fullWidth?: boolean;
}
const { title, description, fullWidth } = Astro.props;
---

<html lang="zh">
  <head>
    <BaseHtmlHead title={title} description={description} />
  </head>
  <body class="dark:bg-gray-800 dark:text-gray-300">
    <TopNavigation />
    <main class="p-4 mx-auto max-w-screen-lg">
      <slot />
    </main>
  </body>
</html>
