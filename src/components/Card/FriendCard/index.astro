---
import type { FriendCardProps } from "./type";
import clsx from "clsx";

type Props = FriendCardProps;

const { name, link } = Astro.props;

// Group styles by purpose
const cardStyles = {
  base: "flex w-full flex-row justify-between rounded-lg py-4 px-4 transition-all active:scale-[0.995]",
  borders:
    "border border-zinc-200 dark:border-zinc-700 md:hover:border-zinc-300 dark:md:hover:border-zinc-600",
  background: "bg-white dark:bg-zinc-900",
  animation: "md:hover:scale-105 md:hover:shadow-sm group",
  spacing: "mb-3",
};

const iconStyles = {
  base: "text-sm transition-colors",
  colors:
    "text-zinc-300 dark:text-zinc-600 group-hover:md:text-zinc-500 dark:md:group-hover:text-zinc-400",
  sizing: "inline-block h-4 w-4 ml-1",
};
---

<div class={cardStyles.spacing}>
  <a
    href={link}
    target="_blank"
    class={clsx(
      cardStyles.base,
      cardStyles.borders,
      cardStyles.background,
      cardStyles.animation
    )}
  >
    <div class="flex-1 font-medium">
      <span>{name}</span>
    </div>

    <span class={clsx(iconStyles.base, iconStyles.colors)}>
      <svg class={iconStyles.sizing} height="1em" viewBox="0 0 512 512">
        <path
          fill="currentColor"
          d="M320 0c-17.7 0-32 14.3-32 32s14.3 32 32 32h82.7L201.4 265.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L448 109.3V192c0 17.7 14.3 32 32 32s32-14.3 32-32V32c0-17.7-14.3-32-32-32H320zM80 32C35.8 32 0 67.8 0 112V432c0 44.2 35.8 80 80 80H400c44.2 0 80-35.8 80-80V320c0-17.7-14.3-32-32-32s-32 14.3-32 32V432c0 8.8-7.2 16-16 16H80c-8.8 0-16-7.2-16-16V112c0-8.8 7.2-16 16-16H192c17.7 0 32-14.3 32-32s-14.3-32-32-32H80z"
        ></path>
      </svg>
    </span>
  </a>
</div>
